{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/shared/testing": ["libs/shared/testing/src/index.ts"],
      "@portfolio/landing/shared/data-access": ["libs/landing/shared/data-access/src/index.ts"],
      "@portfolio/shared/types": ["libs/shared/types/src/index.ts"],
      "@portfolio/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@portfolio/landing/shared/ui": ["libs/landing/shared/ui/src/index.ts"],
      "@portfolio/landing/shared/util": ["libs/landing/shared/util/src/index.ts"],
      "@portfolio/landing/feature-home": ["libs/landing/feature-home/src/index.ts"],
      "@portfolio/shared/errors": ["libs/shared/errors/src/index.ts"],
      "@portfolio/shared/features/breakpoint-observer": [
        "libs/shared/features/breakpoint-observer/src/index.ts"
      ],
      "@portfolio/shared/ui/sidebar": ["libs/shared/ui/sidebar/src/index.ts"],
      "@portfolio/console/shared/ui": ["libs/console/shared/ui/src/index.ts"],
      "@portfolio/console/shared/data-access": ["libs/console/shared/data-access/src/index.ts"],
      "@portfolio/console/shared/util": ["libs/console/shared/util/src/index.ts"],
      "@portfolio/console/feature-auth": ["libs/console/feature-auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
