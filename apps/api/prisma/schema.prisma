generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Language {
  EN
  VI
}

enum ContentStatus {
  DRAFT
  PUBLISHED
}

enum SocialPlatform {
  GITHUB
  LINKEDIN
  TWITTER
  FACEBOOK
  INSTAGRAM
  YOUTUBE
  WEBSITE
  OTHER
}

enum Availability {
  OPEN_TO_WORK
  EMPLOYED
  FREELANCING
}

enum SkillCategory {
  FRONTEND
  BACKEND
  DATABASE
  DEVOPS
  MOBILE
  TOOLS
  LANGUAGES
  OTHER
}

enum ProjectCategory {
  LANDING_PAGE
  CMS
  ERP
  E_COMMERCE
  DASHBOARD
  API
  MOBILE_APP
  LIBRARY
  CLI_TOOL
  OTHER
}

enum ProjectType {
  PERSONAL
  TEAM
  COMPANY
  OPEN_SOURCE
  FREELANCE
}

enum ProjectSize {
  SMALL
  MEDIUM
  LARGE
  ENTERPRISE
}

enum SyncStatus {
  SYNCED
  PENDING
  FAILED
}

model User {
  id                     String    @id @db.Uuid
  email                  String    @unique
  password               String?
  name                   String
  lastLoginAt            DateTime?
  refreshToken           String?
  refreshTokenExpiresAt  DateTime?
  passwordResetToken     String?
  passwordResetExpiresAt DateTime?
  googleId               String?   @unique
  failedLoginAttempts    Int       @default(0)
  lockedUntil            DateTime?
  tokenVersion           Int       @default(0)
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  @@map("users")
}
